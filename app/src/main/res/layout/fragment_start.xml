<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.StartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            tools:text="WelcomeText" />

        <TextView
            android:id="@+id/water_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/welcome_water"
            android:textAlignment="center"
            android:textSize="24sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weight_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/welcome_weight"
                android:textSize="20sp"
                android:gravity="end" />

            <EditText
                android:id="@+id/welcome_editText"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/start_new_day_button"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="@string/welcome_start_new_day"
                android:textSize="20sp" />

            <Button
                android:id="@+id/start_button"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:text="@string/welcome_button_start"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>